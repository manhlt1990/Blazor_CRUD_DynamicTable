@page "/dynamic-table"
@using Blazor.DynamicTable.Servives
@inject IDynamicTableService  dynamicTableService
@{
    var listTable = dynamicTableService.GetAll();
}

<NavLink class="nav-link" href="dynamic-table/manage/0">
    <span class="oi oi-plus" aria-hidden="true"></span> Create
</NavLink>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                TableName
            </th>
            <th>
                TableProperty
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in listTable)
        {
            var editLink = $"dynamic-table/manage/{item.Id}";
            <tr>
                <td>
                    <span>@item.Name</span>
                </td>
                <td>
                    <span>@item.TableName</span>
                </td>
                <td>
                    <span>@item.TableProperty</span>
                </td>
                <td>
                    <NavLink class="nav-link" href="@editLink">
                        <span class="oi oi-pencil" aria-hidden="true"></span> Edit
                    </NavLink>
                </td>
            </tr>
        }
    </tbody>
</table>

